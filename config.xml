<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cityexchv.cityexchv" versionCode="150" version="4.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bitacora cityexpress</name>
    <description>
        Bitacora Elctronica para conductores de chv
    </description>
    <author email="fsalazar.sch@gmail.com" href="http://www.nullpointerex.com">
        Felipe Salazar Schlotterbeck
    </author>
    
    <content src="www/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="org.apache.cordova.geolocation" />
    <icon src="www/res/icon/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.0" />
    <engine name="android" spec="~5.1.1" />
    <engine name="windows" spec="~4.3.1" />
</widget>
